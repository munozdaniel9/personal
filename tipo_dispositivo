<script>
        if(/Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent)){
            if(document.URL !="http://domain.com/mobile/")
            {
                window.location ="http://domain.com/mobile/";
            }
        }
</script>

